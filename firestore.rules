rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================================
    // üõ°Ô∏è 1. SECURITY UTILITIES
    // ============================================================================

    // Standard Auth Check
    function isAuthenticated() {
      return request.auth != null;
    }

    // Strict Ownership Check
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Role Check: Admin (Database Lookup)
    // Note: Most Admin actions now use Admin SDK (Server-Side), bypassing these rules.
    // This remains for potential direct console access or read operations.
    function isAdmin() {
      return isAuthenticated() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Email Domain Check (RMU Only)
    // Safe case-insensitive check relying on lower-cased token or strict regex
    function isRMU() {
      return isAuthenticated() 
             && request.auth.token.email.matches('.*@rmu[.]ac[.]th$');
    }

    // Verified Email Check
    function isVerifiedEmail() {
      return isAuthenticated() && request.auth.token.email_verified == true;
    }

    // Active User Check
    // Prevents Banned/Suspended users from creating content
    function isActiveUser() {
      let status = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status;
      return status == 'ACTIVE' || status == 'WARNING';
    }

    // Helper: Check if only specific keys are being modified
    // Useful for strict update policies
    function notUpdating(fields) {
      return !request.resource.data.diff(resource.data).affectedKeys().hasAny(fields);
    }

    // ============================================================================
    // üìÇ 2. COLLECTION RULES
    // ============================================================================

    // ----------------------------------------------------------------------------
    // üë§ USERS COLLECTION
    // Security Goal:
    // 1. Creation: Client can ONLY create their own doc with limited fields.
    // 2. No "Ghost Accounts": Cannot overwrite existing doc.
    // 3. No Privilege Escalation: Cannot set 'isAdmin', 'status', 'warningCount' etc.
    // ----------------------------------------------------------------------------
    match /users/{userId} {
      allow read: if true; // Public profiles (needed for posts/comments)

      // ‚úÖ REGISTER (CREATE)
      allow create: if isOwner(userId)    // Must own the UID
                    && isRMU()            // Must use RMU Email
                    && !exists(/databases/$(database)/documents/users/$(userId)) // Prevent Overwrite
                    // DATA INTEGRITY:
                    && request.resource.data.email == request.auth.token.email // Email must match Auth
                    && request.resource.data.get('isAdmin', false) == false    // Cannot set self as Admin
                    && request.resource.data.get('status', 'ACTIVE') == 'ACTIVE' // Must be ACTIVE
                    && request.resource.data.get('warningCount', 0) == 0;      // Cannot reset warnings

      // ‚úÖ UPDATE PROFILE
      // Prevent changing immutable identity fields (uid, email, status)
      // Line settings allowed.
      allow update: if isOwner(userId)
                    && notUpdating(['email', 'uid', 'isAdmin', 'status', 'warningCount', 'createdAt', 'bannedReason', 'suspendedUntil']);
      
      // ADMIN ACCESS
      allow write: if isAdmin();
    }

    // ----------------------------------------------------------------------------
    // üì¶ ITEMS COLLECTION
    // Goal: Only Verified+Active users post. Owners edit distinct fields.
    // ----------------------------------------------------------------------------
    match /items/{itemId} {
      allow read: if true;

      allow create: if isAuthenticated() 
                    && isVerifiedEmail() 
                    && isActiveUser() 
                    && request.resource.data.postedBy == request.auth.uid;

      allow update: if isAuthenticated()
                    && (
                      (resource.data.postedBy == request.auth.uid && notUpdating(['postedBy', 'postedByEmail'])) // Owner edits
                      || isAdmin()
                      || (isActiveUser() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status'])) // Exchange flow
                    );

      allow delete: if (isAuthenticated() && resource.data.postedBy == request.auth.uid) || isAdmin();
    }

    // ----------------------------------------------------------------------------
    // ü§ù EXCHANGES
    // Goal: Private transaction flow.
    // ----------------------------------------------------------------------------
    match /exchanges/{exchangeId} {
      function isParticipant() {
        return resource.data.requesterId == request.auth.uid || 
               resource.data.ownerId == request.auth.uid;
      }

      allow read: if isAuthenticated() && (isParticipant() || isAdmin());
      
      // List Protection: Prevent dumping database
      // Note: list rules cannot validate resource.data per-document
      // Security comes from query filters that client must include
      // Code uses where("requesterId", "==", userId) or where("ownerId", "==", userId)
      allow list: if isAuthenticated() && request.query.limit <= 50;

      allow create: if isAuthenticated() 
                    && isVerifiedEmail() 
                    && isActiveUser()
                    && request.resource.data.requesterId == request.auth.uid;

      allow update: if isAuthenticated() && (
        (isParticipant() && isActiveUser()) || isAdmin()
      );
      
      // Delete (Cancel/Clean up)
      allow delete: if isAdmin();
    }

    // ----------------------------------------------------------------------------
    // üí¨ CHAT MESSAGES
    // Goal: Secure Messaging for Participants
    // ----------------------------------------------------------------------------
    match /chatMessages/{messageId} {
      allow read: if isAuthenticated(); 
      
      allow create: if isAuthenticated() 
                    && isActiveUser()
                    && request.resource.data.senderId == request.auth.uid;
    }

    // ----------------------------------------------------------------------------
    // üé´ SUPPORT & REPORTS
    // ----------------------------------------------------------------------------
    match /reports/{reportId} {
      allow read: if isOwner(resource.data.reporterId) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.reporterId == request.auth.uid;
      allow update: if isAdmin(); 
    }

    match /support_tickets/{ticketId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin() || isOwner(resource.data.userId);
    }

    match /notifications/{notificationId} {
      allow read: if isOwner(resource.data.userId);
      // CREATE: Only for yourself (rare edge case) - system notifications use Admin SDK
      allow create: if isOwner(request.resource.data.userId);
      // UPDATE/DELETE: Only owner can mark as read or delete their notifications
      allow update, delete: if isOwner(resource.data.userId);
    }

    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.resource.data.reviewerId == request.auth.uid;
      allow delete: if isAdmin();
    }
    
    match /favorites/{favoriteId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }
    
    match /drafts/{draftId} {
      // CREATE uses request.resource (incoming data, document doesn't exist yet)
      allow create: if isOwner(request.resource.data.userId);
      // READ/UPDATE/DELETE uses resource (existing document data)
      allow read, update, delete: if isOwner(resource.data.userId);
    }

    // ----------------------------------------------------------------------------
    // üëÆ ADMIN & SYSTEM LOGS
    // ----------------------------------------------------------------------------
    match /admins/{userId} {
      allow read: if isAdmin();
      allow write: if false; // Manual setup only
    }

    // Admin Logs: Read-only for admins. Writes happen via Admin SDK (Server).
    match /adminLogs/{logId} {
      allow read: if isAdmin();
      allow write: if false; 
    }
    
    // User Warnings: Read-only for user/admin. Writes via Admin SDK (Server).
    match /userWarnings/{warningId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow write: if false;
    }
    
    // Cases: Admin only
    match /cases/{caseId} {
        allow read, write: if isAdmin();
    }
  }
}
